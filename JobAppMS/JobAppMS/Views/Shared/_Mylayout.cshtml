                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link text-dark " asp-area="" asp-controller="JobList" asp-action="Create"> Post Job </a>
                                    </li>



                                }
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="ApplyJob" asp-action="Crepersoon"> Submit Resume </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark btn btn-outline-success" asp-area="" asp-controller="JobList" asp-action="Index"> Find a Dream Job </a>
                                </li>
                                |
                                <li class="nav-item">
                                    <a class="nav-link text-dark btn btn-outline-warning" asp-area="" asp-controller="Home" asp-action="ProjectOverView"> Project Over View </a>
                                </li>
                            </ul>
                            @await Html.PartialAsync("_LoginPartial")
                        </div>
                        
                    </div>
                    
                </nav>
                <div class="text-center">
                    <h6 class="bg-warning" style="align-content:center">Nothing Input without Login!!!  </h6>

                </div>
                
            </div>
        </div>
    </header>


