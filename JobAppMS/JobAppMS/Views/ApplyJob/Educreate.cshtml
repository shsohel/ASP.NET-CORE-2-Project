@model JobAppMS.Models.Education
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Educreate";
    Layout = "~/Views/Shared/_Mylayout.cshtml";

}


<hr />
<div class="row justify-content-sm-center modal modal-content modal-dialog-centered">

    <div class="col-md-6 align-self-center border border-success modal modal-content">
        <h4 class="align-content-center border font-weight-bold btn btn-success  ">Education Inforamtion </h4>

        @if (SignInManager.IsSignedIn(User))
        {
            <form asp-action="Educreate" class="table table-responsive align-content-center container container-fluid">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ExamDegreeTitle" class="control-label"></label>
                    <input asp-for="ExamDegreeTitle" class="form-control" />
                    <span asp-validation-for="ExamDegreeTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GroupMajorSubject" class="control-label"></label>
                    <input asp-for="GroupMajorSubject" class="form-control" />
                    <span asp-validation-for="GroupMajorSubject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InstituteUniversity" class="control-label"></label>
                    <input asp-for="InstituteUniversity" class="form-control" />
                    <span asp-validation-for="InstituteUniversity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Result" class="control-label"></label>
                    <input asp-for="Result" class="form-control" />
                    <span asp-validation-for="Result" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CGPA" class="control-label"></label>
                    <input asp-for="CGPA" class="form-control" />
                    <span asp-validation-for="CGPA" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Scale" class="control-label"></label>
                    <input asp-for="Scale" class="form-control" />
                    <span asp-validation-for="Scale" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="YearOfPassing" class="control-label"></label>
                    <input asp-for="YearOfPassing" class="form-control" />
                    <span asp-validation-for="YearOfPassing" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Duration" class="control-label"></label>
                    <input asp-for="Duration" class="form-control" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" value="@UserManager.GetUserName(User)" readonly="readonly" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="NEXT" class="btn btn-primary" />
                </div>
            </form>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
