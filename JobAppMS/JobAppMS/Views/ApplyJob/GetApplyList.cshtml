@model IEnumerable<JobAppMS.Models.JobApplication>



@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "GetApplyList";
    Layout = "~/Views/Shared/_Mylayout.cshtml";

}


<h1>GetApplyList</h1>

<p>
    <a asp-action="Jobapply">Create New</a>
</p>


<hr />
<div class="row justify-content-sm-center modal modal-content modal-dialog-centered">

    <div class="col-md-12 align-self-center border border-success modal modal-content">
        <h4 class="align-content-center border font-weight-bold btn btn-success  "> Applicant List </h4>

        @if (SignInManager.IsSignedIn(User))
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.JobList)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobList.Position)
                            </td>
                            <td>
                                @*<a asp-action="Edit" asp-route-id="@item.JobApplicationID">Edit</a> |*@
                                <a asp-action="Details" asp-route-id="@item.JobApplicationID">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.JobApplicationID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</div>