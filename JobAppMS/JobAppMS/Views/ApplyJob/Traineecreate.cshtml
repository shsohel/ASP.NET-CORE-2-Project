@model JobAppMS.Models.Training

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Traineecreate";
    Layout = "~/Views/Shared/_Mylayout.cshtml";

}



<hr />
<div class="row justify-content-sm-center modal modal-content modal-dialog-centered">

    <div class="col-md-6 align-self-center border border-success modal modal-content">
        <h4 class="align-content-center border font-weight-bold btn btn-success  ">Trainee Information </h4>

        @if (SignInManager.IsSignedIn(User))
        {
        <form asp-action="Traineecreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TrainingTitle" class="control-label"></label>
                <input asp-for="TrainingTitle" class="form-control" />
                <span asp-validation-for="TrainingTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TopicsCovered" class="control-label"></label>
                <input asp-for="TopicsCovered" class="form-control" />
                <span asp-validation-for="TopicsCovered" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainingYear" class="control-label"></label>
                <input asp-for="TrainingYear" class="form-control" />
                <span asp-validation-for="TrainingYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Institute" class="control-label"></label>
                <input asp-for="Institute" class="form-control" />
                <span asp-validation-for="Institute" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" value="@UserManager.GetUserName(User)" readonly="readonly" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
        }
        </div>
    </div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
